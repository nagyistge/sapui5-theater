<core:View 
		controllerName="sapui5-theater-web.settings" 
		xmlns="sap.ui.commons"
		xmlns:core="sap.ui.core" 
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:l="sap.ui.layout"
		xmlns:f="sap.ui.layout.form"
		xmlns:html="http://www.w3.org/1999/xhtml">

	<f:SimpleForm>
		<f:content>
			<core:Title text="Kodi server" />
				<Label text="IP" />
				<TextField value="192.168.1.65" />
				<Label text="Port" />
				<TextField value="8080" />
				<Label text="User" />
				<TextField value="xbmc" />
				<Label text="Password" />
				<PasswordField value="xbmc" />
				<Label />
				<Button text="Check settings" tooltip="Check settings" press="onCheckSettings"/>				
			<core:Title text="Import data" />
				<Label />
				<Button text="Import test data" tooltip="Import test data" press="onImportTestData"/>
			<core:Title text="Album inspector" />
				<Label />
				<Button text="Test album inspector" tooltip="Test album explorer" press="onTestAlbumInspector" />
		</f:content>
	</f:SimpleForm>

</core:View>
